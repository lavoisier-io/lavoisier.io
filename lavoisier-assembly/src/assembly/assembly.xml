<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- Include Spring Boot Fat JAR -->
    <files>
        <file>
            <source>${project.parent.basedir}/lavoisier-web/target/lavoisier-web-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>lavoisier.io-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/lavoisier-web/src/main/resources/application.properties</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <!-- Include some documentation files -->
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>INSTALL*</include>
                <include>LICENSE*</include>
                <include>README*</include>
            </includes>
        </fileSet>
        <!-- Create an empty directory "channel" to drop channel bundles jar -->
        <fileSet>
            <directory>./</directory>
            <outputDirectory>/channel</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <!-- Include felix bundle to be installed -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/bundle</outputDirectory>
            <includes>
                <include>org.apache.felix:org.apache.felix.log</include>
                <include>org.apache.felix:org.apache.felix.fileinstall</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
